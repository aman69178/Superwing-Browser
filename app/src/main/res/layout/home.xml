<?xml version="1.0" encoding="utf-8"?>





<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homefragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffffff">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">







        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:id="@+id/logo"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="15dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="80dp"
                android:textStyle="italic"
                android:textColor="#000000"
                android:textSize="30dp"

                />


<LinearLayout

    android:layout_width="wrap_content"
    android:layout_height="45dp"
    android:background="@drawable/edittext"
    android:layout_marginTop="150dp"
    android:layout_marginLeft="15dp"
    android:padding="10dp"
    android:id="@+id/srch"
    android:paddingRight="10dp"


    >
            <EditText

                android:layout_width="250dp"
                android:layout_height="40dp"
                android:maxLines="1"
                  android:id="@+id/editText"

                android:textColorHighlight="#005682"
                android:textColorHint="#808080"
                android:paddingLeft="5dp"
                />

            <ImageButton
                android:id="@+id/voicesrch"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/voicesrchicn"
                android:layout_marginTop="2dp"
                android:background="#fff"/>


            <ImageButton
                android:id="@+id/imagesrch"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toStartOf="@+id/voicesrch"
                android:src="@drawable/iamgesrchicn"
                android:background="#fff"/>
</LinearLayout>
            <Button
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Search"
                android:id="@+id/button"
                android:background="#005682"
                android:layout_below="@+id/srch"
                android:layout_marginLeft="130dp"
                android:textColor="#ffffff"



                />

            <GridView
                android:layout_below="@id/button"
                android:numColumns="auto_fit"
                android:gravity="center"
                android:columnWidth="80dp"
                android:stretchMode="columnWidth"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/grid"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:paddingBottom="40dp"
                />

            <GridView

                android:elevation="23dp"
                android:id="@+id/dgrid"
                android:background="@drawable/gridborder"
                android:layout_below="@id/button"
                android:numColumns="auto_fit"
                android:columnWidth="90dp"
                android:stretchMode="columnWidth"
                android:layout_width="480dp"
                android:layout_height="200dp"
                android:layout_gravity="bottom"
                android:paddingBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />

            <TextView

                android:paddingLeft="128dp"
                android:layout_marginTop="-26dp"
                android:elevation="23dp"
                android:id="@+id/clos"
                android:layout_width="480dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/gridborder"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/dgrid"
                android:textSize="20dp"
                />

        </RelativeLayout></FrameLayout>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/homenavigation"
        app:itemIconTint="#000000"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/homenavigation" />


</android.support.constraint.ConstraintLayout>
